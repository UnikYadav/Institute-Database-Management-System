<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Update</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container_insert">
    <div class="tables_list">
        <label for="tables">Choose a table :</label>
        <select id="tables" name="tableList" form="tableForm">
            <option>Course</option>
            <option>Department</option>
            <option>Faculty</option>
            <option>Inventory</option>
            <option>Student</option>
        </select>
        <form method="post" action="/update" id="tableForm">
            <input type="submit">
        </form>
    </div>

 <% if (temp.length !== 0) { %>
        <h1>Select to update the <%= temp %> information below</h1>
        <div class="tables_list_col">
            <label for="tables_col">Choose a column :</label>
            <select id="tables_col"  name="attr" form="tableFormCol">
                <% for (let i = 0; i < columns.length; i ++){ %>
                    <option><%= columns[i].name %></option>
                <% } %>
            </select>

            <form method="post" action='<%= '/update/table?name=' + temp + '&attr=' + attribute %>' id="tableFormCol">
                <input type="submit">
            </form>

            <% if (attribute !== '') { %>
                <label for="<%= attribute%>">Enter <%= attribute%></label>
                <% if (attribute === 'DOB')  { %>
                    <input type="date"  name='value' id="<%= attribute%>" placeholder="<%= attribute%>" form="tableFormCol">
                <% } else { %>
                    <input type="text" name='value' id="<%= attribute%>" placeholder="<%= attribute%>" form="tableFormCol">
                <% } %>
            <% } %>

        <% if (attribute !== '') { %>
                    <br>
                <% for (let i = 0; i < column.length; i ++){ %>
                    <label for="<%= column[0].name%>">Enter <%= column[0].name%></label>
                    <input placeholder="<%= column[0].name%>" name="<%= column[0].name%>" id="<%= column[0].name%>" required form="tableFormCol">
                    <br><br>
                <% } %>
                <input type="submit" value="Update" form="tableFormCol">
            <%}%>
        </div>
    <% } %>

</div>
</body>
</html>